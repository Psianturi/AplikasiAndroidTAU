<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/logo_tau"
                android:layout_margin="6dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_avatar">

                <TextView
                    android:id="@+id/txt_satu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF8E52"
                    android:layout_marginStart="4dp"
                    android:textSize="14dp"
                    android:text="TANRI ABENG UNIVERSITY" />

                <TextView
                    android:id="@+id/txt_dua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:layout_marginStart="5dp"
                    android:layout_below="@+id/txt_satu"
                    android:text="Career Ready Profesional"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="60dp"
                android:background="#c7c7c7"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/txt_content_quiz"
                android:layout_width="wrap_content"
                android:layout_height="448dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/quiz_text"
                android:layout_marginTop="78dp"
                tools:ignore="RtlHardcoded" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="240dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Lanjut"
                    android:background="@drawable/edittext_background"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:id="@+id/btn_go_to_quiz"
                    android:textAppearance="?android:textAppearanceMedium"
                    />

            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

</FrameLayout>
