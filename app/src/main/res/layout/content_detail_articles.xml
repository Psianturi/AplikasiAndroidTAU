<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_home"
    android:scrollbarThumbVertical="@drawable/vertical_scrollview_bg"
    android:scrollbarTrackVertical="@drawable/vertical_scrollview_line">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@drawable/logo_tau"
                    android:layout_margin="6dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_avatar">

                    <TextView
                        android:id="@+id/txt_facilitator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF8E52"
                        android:layout_marginStart="4dp"
                        android:textSize="14dp"
                        android:text="TANRI ABENG UNIVERSITY" />

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:layout_below="@+id/txt_facilitator"
                        android:text="Career Ready Profesional"
                        />
                </RelativeLayout>
            </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#c7c7c7"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/intro_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/text_intro">
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="214dp"
                android:layout_marginBottom="2dp"
                android:background="#c7c7c7"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar2"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_below="@+id/intro_one"
                android:layout_marginLeft="171dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/logo_tau" />

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/img_avatar2"
                android:text="@string/large_text"
                tools:ignore="RtlHardcoded" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="35dp"
                android:layout_below="@+id/txt_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="10dp"
                    android:text="Lokasi Kampus >> "
                    android:textColor="@color/income_coloer" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/img_btn_map"
                    android:layout_width="72dp"
                    android:layout_height="65dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/ic_map_button" />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


</ScrollView>